    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "client",
                "--server-ip",
                "localhost",
                "--server-port",
                "8090",
                "--client-ip",
                "localhost",
                "--client-port",
                "8091"
            ],
            "preLaunchTask": "compile and copy",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": [
                "server",
                "--server-ip",
                "localhost",
                "--server-port",
                "8090"
            ],
            "preLaunchTask": "compile and copy",
        }
    ]
}